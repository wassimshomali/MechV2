{
  "name": "momech-erp-crm",
  "version": "1.0.0",
  "description": "Digital transformation tool for small garage mechanics - ERP/CRM system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client:dev": "live-server --port=3000 --entry-file=index.html",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./dist/styles.css --watch",
    "build:js": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/ server/",
    "format": "prettier --write src/ server/"
  },
  "keywords": ["erp", "crm", "mechanic", "garage", "automotive", "business-management"],
  "author": "MoMech Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "jest": "^29.6.4",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.9"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
