# MoMech Environment Configuration
# Copy this file to .env and update the values as needed

# Application Environment
NODE_ENV=development
DEBUG=true

# Server Configuration
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_PATH=./database/momech.db
DB_BACKUP_PATH=./database/backups/

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-in-production

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM_NAME=MoMech System
EMAIL_FROM=noreply@momech.com

# File Upload Configuration
UPLOAD_PATH=./public/uploads/

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Backup Configuration
BACKUP_LOCATION=./backups/

# Feature Flags
ENABLE_QR_SCANNING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ONLINE_BOOKING=true
ENABLE_ANALYTICS=true

# Business Configuration
DEFAULT_TAX_RATE=0.08
DEFAULT_CURRENCY=USD
WORKING_HOURS_START=08:00
WORKING_HOURS_END=17:00

# Performance Configuration
CACHE_TTL=300
MAX_REQUEST_SIZE=50mb
TIMEOUT=30000

# Development Configuration (Development Only)
# These should not be used in production
DEV_AUTO_MIGRATE=true
DEV_SEED_DATA=true
DEV_ENABLE_CORS=true